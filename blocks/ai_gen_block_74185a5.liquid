{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-quality-item-{{ ai_gen_id }} {
    background-color: {{ block.settings.bg_color }};
    display: flex;
    align-items: center;
    width: 100%;
    min-height: {{ block.settings.desktop_height }}rem;
  }

  .ai-quality-inner-{{ ai_gen_id }} {
    width: 100%;
    padding: 0 28px;
  }

  .ai-quality-inner-{{ ai_gen_id }} h3 {
    color: {{ block.settings.text_color }};
    margin: 0 0 18px 0;
    font-size: {{ block.settings.desktop_heading_size }}px;
    line-height: 1.2em;
  }

  .ai-divider-quality-{{ ai_gen_id }} {
    width: {{ block.settings.divider_width }}px;
    height: {{ block.settings.divider_height }}px;
    display: block;
    background-color: {{ block.settings.divider_color }};
  }

  @media (min-width: 750px) {
    .ai-quality-inner-{{ ai_gen_id }} {
      max-width: 12rem;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-quality-item-{{ ai_gen_id }} {
      min-height: auto;
      background-color: transparent;
    }

    .ai-quality-inner-{{ ai_gen_id }} {
      padding: 0;
    }

    .ai-quality-inner-{{ ai_gen_id }} h3 {
      font-size: {{ block.settings.mobile_heading_size }}px;
      position: relative;
      padding-left: 1rem;
      margin-bottom: 0;
      color: {{ block.settings.mobile_text_color }};
      line-height: 1.2em;
      font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
      font-weight: {{ settings.type_body_font.weight }};
    }

    .ai-quality-inner-{{ ai_gen_id }} h3:before {
      content: "";
      height: 100%;
      width: {{ block.settings.mobile_dash_width }}px;
      background-color: {{ block.settings.dash_color }};
      position: absolute;
      left: 0;
      top: 0;
      display: block;
    }

    .ai-divider-quality-{{ ai_gen_id }} {
      display: none;
    }
  }
{% endstyle %}

<div
  class="ai-quality-item-{{ ai_gen_id }}"
  style="--dash-color: {{ block.settings.dash_color }}; --bg-color: {{ block.settings.bg_color }}; --text-color: {{ block.settings.text_color }}; --divider-color: {{ block.settings.divider_color }};"
  {{ block.shopify_attributes }}
>
  <div class="ai-quality-inner-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h3>{{ block.settings.heading }}</h3>
    {% endif %}
    <span class="ai-divider-quality-{{ ai_gen_id }}"></span>
  </div>
</div>

